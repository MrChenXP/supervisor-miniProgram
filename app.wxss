/**app.wxss**/
@import "dist/kw-ui/base64.wxss";
.content {
  height: 100vh;
  background: #f5f5f5;
  box-sizing: border-box;
}

view {
  color:#333333;
  box-sizing: border-box;
}
/* ================================================ 简写样式--------------------------------------- */
/* == clearfix == */
.clearfix:after {   /*在元素的内容之后插入新内容*/
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden; /*元素不可见*/
}
.clearfix { /*元素后面添加清除浮动元素 用来清撑不出高*/
    zoom: 1;
}
.fl{
    float: left;
}
.fr{
    float: right;
}
.clear{ /*规定元素左右两侧不允许有浮动*/
    clear: both;
}
.text-bold{
  font-weight: 900;
}
.color-999{
  color: #999999;
}
.color-blue{
  color:#0580c2;
}
.color-red{
    color: red !important;
}
/* ================================================ 公用动画--------------------------------------- */
/*------------- 闪烁 ---------*/
@keyframes blink{
  0%{opacity: 0;}
  50%{opacity: 100;}
  100%{opacity: 0;}
}
/*------------- 下滑 ---------*/
@keyframes glide {
  from{transform: translateY(-100%);}
  to{transform: translateY(0);}
}
/*------------- 背景上移 ---------*/
@keyframes sparkle {
from {
    background-position:0 0;
    }
to {
    background-position:0 -254rpx;
    }
}