/**index.wxss**/
.banner{
  z-index: 10;
  width: 100%;
  height: 254rpx;
  position: sticky;
  overflow: hidden;
  top:0;
}
.banner image{
  width: 100%;
  height: 254rpx;
}
.banner .trafficbar {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 854rpx;
    background: var(--trafficbar);
    animation: sparkle 4s linear infinite;
    opacity: 0.4;
}
.statistics{
  z-index: 10;
  height: 200rpx;
  background: white;
  padding: 30rpx 75rpx;
  display: flex;
  position: sticky;
  top: 254rpx;
}
.statistics .s-body{
  width: 150rpx;
  height: 140rpx;
}
.statistics .s-body .badge{
  background: #f5f5f5;
  margin: 0 25rpx;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  display: flex;
}
.statistics .s-body .badge text{
  margin: auto;
  color: #109dea;
  font-size: 32rpx;
  font-weight: normal;
}
.statistics .s-body .s-title{ 
  font-size: 26rpx;
  color: #666666;
  text-align: center;
  width: 100%;
}

.workspace-gn{
    margin-top: 20rpx;
    height: calc(100vh - 474rpx);
    overflow-y: auto;
    overflow-x: hidden;
}
.wddb-list{
    margin: 15rpx 0;
}