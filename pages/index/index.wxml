<!--index.wxml-->
<view class="content">
  <!-- 轮播图 -->
  <swiper indicator-dots="{{true}}" autoplay="{{true}}" interval="3000"> 
    <swiper-item wx:for="{{newsImaUrl}}" wx:key="index">
      <image class='newsIma' src="{{item}}"></image>
    </swiper-item>
  </swiper>
  <!-- 选项卡 -->
  <view class="newBody">
    <!-- 标题栏 -->
    <scroll-view class="btList" scroll-x="{{true}}" >
      <view wx:for="{{btList}}" wx:key="index" class="bt" bindtap="changeBt"
        class="bt {{isActive == index ? 'active' : ''}}" data-index="{{index}}">{{item}}</view>
    </scroll-view>
    <!-- 列表区 -->
    <scroll-view scroll-y="true" class="newsList">
      <view wx:for="{{newsBtList}}" wx:key="{{i}}" hidden="{{!(i===isActive)}}" wx:for-index="i" wx:for-item="list">
        <view wx:for="{{list}}" wx:for-index="j" wx:for-item="news" wx:key="j" >            <kw-list-cell extraIcon="{{extraIcon}}" title="{{news.TITLE}}" rightNote="{{news.YWSJSJ}}" isArrow="{{false}}" kw-class="changeBoder"></kw-list-cell>
        </view>
      </view>
    </scroll-view>
  </view>
</view>