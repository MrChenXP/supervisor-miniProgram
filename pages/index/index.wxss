/**index.wxss**/
swiper {
  width: 100%;
  height: 405rpx;
}
.newsIma{
  width: 100%;
  height: 405rpx;
}
.newBody{
  flex-basis: 667rpx;
  flex-grow: 2;
  flex-shrink: 2;
  width: 100%;
}
.btList{
  white-space: nowrap;
  height: 95rpx;
  background: white;
}
.bt {
  display: inline-block;
  width: 170rpx;
  height: 93rpx;
  line-height: 93rpx;
  border-bottom: #dedede solid 2rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
}
.active{
  display: inline-block;
  border-bottom:  #109DEA solid 4rpx;
  height: 91rpx;
  color: #109dea;
  line-height: 91rpx;
}
.newsList{
  height: calc(100% - 95rpx);
  padding-top: 16rpx;
  background: #f5f5f5;
}
/* ↓↓↓↓↓↓↓↓↓↓↓↓↓↓ 新闻列表 ↓↓↓↓↓↓↓↓↓↓↓↓↓↓ */
.news{
  height: 105rpx;
  position: relative;
  display: flex;
  flex-direction: row;
}
.news .newsBt{
  width: 540rpx;
  align-self:center;
  color:#333333;
  font-size: 28rpx;
  flex-shrink: 2;
  -webkit-line-clamp:2;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  overflow:hidden;
  text-overflow: ellipsis;
}
.news .newsDate{
  width: 60rpx;
  color: #999999;
  font-size: 26rpx;
  height: 20rpx;
  line-height: 20rpx;
  margin: auto;
}
.changeBoder .kw-list-cell-extraIcon{
  line-height: 105rpx;
}
/* ↑↑↑↑↑↑↑↑↑ 新闻列表 ↑↑↑↑↑↑↑ */

.kw-list-cell-border-bottom::after{
  background: none !important;
}
.changeBoder::after{
  border-bottom: #d5d4d4 dashed 2rpx;
} 

/* 选择地区 */
.xzdqAn{
    position: fixed;
    width: 120rpx;
    height: 120rpx;
    right: 20rpx;
    bottom: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.xzdqAn image{
    width: 120rpx;
    height: 120rpx;
}
.xzdq {
  position: fixed;
  left: 0;
  width: 750rpx;
  padding: 80rpx 30rpx;
  z-index: 999;
  background: rgba(0, 0, 0, 0.2);
  height: 100vh;
  top: 0;
}
.xzdq-mask {
  z-index: 1000;
  position: fixed;
  width: 100%;
  left: 0;
  height: 100vh;
  top: 0;
}

.xzdq-content {
  position: relative;
  z-index: 1001;
  margin: auto;
  width: 100%;
  background: white;
  -webkit-box-shadow: 0 0 15rpx 5rpx darkgray;
          box-shadow: 0 0 15rpx 5rpx darkgray;
  border-radius: 10rpx;
  display: flex;
  flex-wrap: wrap;
  /* height: 100%; */
  overflow: auto;
}
.xzdq-title{
    text-align: center;
    padding: 20rpx;
    position: sticky;
    top: 0;
    width: 690rpx;
    background: #b1e6ff;
}
.xzdq-info{
    margin-top: 20rpx;
    padding: 20rpx;
    position: sticky;
    top: 0;
    width: 690rpx;
}
.xzdq-dq{
    width: 230rpx;
    height: 230rpx;
    padding: 20rpx;
    text-align: center;
    line-height: 190rpx;
}
.xzdq-cancel{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
}
.xzdq-content .save{
    position: sticky;
    bottom: 0;
    margin-bottom: 0;
    width: 690rpx;
}