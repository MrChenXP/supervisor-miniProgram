.kw-gzjh-select {
  position: fixed;
  left: 0;
  width: 750rpx;
  padding: 80rpx 20rpx;
  z-index: 1001;
  background: rgba(0, 0, 0, 0.2);
  height: 100vh;
  top: 0;
  animation: show 750ms;
}

.kw-gzjh-select label {
    display: inline-block;
    background: white;
    width: 100%;
    padding: 20rpx !important;
    position: relative;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}
.kw-gzjh-select scroll-view {
  height: calc(100% - 205rpx);
}
.kw-gzjh-select .kw-search-body {
    border-radius: 10rpx 10rpx 0 0;
}
.kw-gzjh-select-mask {
  z-index: auto;
  position: fixed;
  width: 100%;
  left: 0;
  height: 100vh;
  top: 0;
}
.kw-gzjh-select-content {
  z-index: 1001;
  margin: auto;
  width: 100%;
  background: white;
  height: 100%;
  -webkit-box-shadow: 0 0 15rpx 5rpx darkgray;
          box-shadow: 0 0 15rpx 5rpx darkgray;
  padding-bottom: 20rpx;
  border-radius: 10rpx;
  position: relative;
}
.kw-gzjh-select-zcxj{
    text-align: right;
}
.kw-gzjh-select-radio-label {
  text-align: left;
  position: absolute;
  left: 100rpx;
  top: 20rpx;
}
.xcddSelectGzjBorderBottom::after {
  position: absolute;
  z-index: 3;
  right: 0;
  bottom: 0;
  left: 0;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(0.5);
      -ms-transform: scaleY(0.5);
          transform: scaleY(0.5);
  background-color: #c8c7cc;
  margin: 0 20rpx;
}
.save {
  width: 670rpx;
  margin: 0 20rpx;
  border: none !important;
}
