.kw-tag {
  display: inline-block;
  height: 40rpx;
  padding: 0 16rpx;
  line-height: calc(40rpx - 2px);
  border-radius: 2rpx;
  background: #fff;
  font-size: 24rpx;
  vertical-align: middle;
  border: 1px solid #dddee1;
}

.kw-tag-none {
  border-color: #fff;
}

.kw-tag-default {
  border-color: #dddee1;
  background: #e9eaec;
}

.kw-tag-red {
  background: #ed3f14;
  color: #fff;
}

.kw-tag-red-border {
  color: #ed3f14;
  background: #fff;
  border-color: #ed3f14;
}

.kw-tag-red-checked {
  background: #ed3f14;
  color: #fff;
  border-color: #ed3f14;
}

