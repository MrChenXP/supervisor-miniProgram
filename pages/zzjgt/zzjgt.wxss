/* pages/zzjgt/zzjgt.wxss */
.zzjgt{
  height: auto;
}
.list-cell {
  min-height: 95rpx;
  padding: 20rpx 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  position: relative;
  background: white;
  margin-bottom: 20rpx;
}
.list-cell-line{
    margin: 10rpx 0;
}
.m-l {
  margin-left: 40rpx;
}
.col-link {
  color: #0580c2;
}
.ckdx {
  z-index: 999;
  position: fixed;
  left: 0;
  width: 100%;
  height: 100vh;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ckdx .ckdx-mask {
    z-index: 999;
    position: fixed;
    background: rgba(0, 0, 0, 0.5);
    width: 100%;
    left: 0;
    height: 100vh;
    top: 0;
}
.ckdx .ckdx-body {
    position: relative;
    background: white;
    z-index: 1001;
    padding: 20rpx;
    width: 80%;
    border-radius: 10rpx;
    max-height: 30vh;
    overflow: auto;
}
.ckdx .ckdx-close{
    position: absolute;
    right: 0;
}
.ckdx .ckdx-dx{
    display: flex;
    margin: 20rpx 0;
}
.ckdx .ckdx-role-mc, .ckdx .ckdx-dxmc {
    max-width: 50%;
    align-self: flex-start;
}

