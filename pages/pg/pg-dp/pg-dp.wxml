<view class="content pg"> 
    <view class="pg-title text-bold">
        {{tbbg.MB_ORG_MC || user.orgMc}}-{{param.PCMC}}
    </view>

    <scroll-view scroll-y class="pg-body">
        <!-- 上面的报告 -->
        <view class="text-bold pg-body-title">报告</view>
        <view wx:for="{{tbbg}}" wx:key="index">
            <kw-list-cell isArrow="{{false}}" borderBottom="{{false}}">
                <view>
                    <view class="ddjs-head clearfix" >
                        <text class="fl" wx:if="{{item.PGLX == 1}}">
                            总分:<text class="color-red">{{item.ZP_ZF||'未填写'}}</text> 评估人:{{item.TBR_MC||'未填写'}} 提交时间：{{item.ZP_SBSJ||'未填写'}}
                        </text>
                        <text class="fl" wx:else>
                            总分:<text class="color-red">{{item.DP_ZF||'未填写'}}</text> 评估人:{{item.PGR_MC||'未填写'}} 提交时间：{{item.DP_SBSJ||'未填写'}}
                        </text>
                    </view>
                </view>
            </kw-list-cell>
            <kw-list-cell isArrow="{{false}}">
                <view>
                    <view class="ddjs-head clearfix" >
                        <text class="fl">亮点 / 问题</text>
                        <view class="fr ">
                            <button size="mini" type="primary" bindtap="zpbgShow" disabled="{{param.STATU==2 || item.PGLX==1}}" data-index="{{index}}">{{item.PGMC}}</button>
                        </view>
                    </view>
                    <view class="ddjs-body" wx:if="{{item.PGLX == 1}}">
                        <view>【总结本地工作中的突出亮点】：{{item.ZP_TCLD||'未填写'}}</view>
                        <view>【总结本地工作中的存在问题】：{{item.ZP_CZWT||'未填写'}}</view>
                        <view>【下一步工作计划】：{{item.ZP_XYBGZ||'未填写'}}</view>
                    </view>
                    <view class="ddjs-body" wx:else>
                        <view>【突出亮点】：{{item.DP_TCLD||'未填写'}}</view>
                        <view>【存在问题】：{{item.DP_CZWT||'未填写'}}</view>
                        <view>【整改建议】：{{item.DP_ZGJY||'未填写'}}</view>
                    </view>
                </view>
            </kw-list-cell>
        </view>

        <!-- 下面的指标评估 -->
        <view>
            <view class="text-bold pg-body-title">评估</view>
            <view class="pg-yjbt" wx:if="{{xmpg.children}}" wx:for="{{xmpg.children}}" wx:for-item="yjItem" wx:for-index="yjIndex" wx:key="yjIndex">
                <text class="text-bold">{{yjItem.CONTENT}}</text>
                <text class="color-red">（总分{{yjItem.ZBFZ }}分）</text>

                <!--二级观测 -->
                <view class="pg-ejbt" wx:if="{{yjItem.children}}" wx:for="{{yjItem.children}}" wx:for-item="ejItem" wx:for-index="ejIndex" wx:key="ejIndex" >
                    {{ejItem.CONTENT}}
                    <text class="color-red">（{{ejItem.ZBFZ }}分）</text>
                    <view wx:for="{{ejItem.PG_LIST}}" wx:for-item="ej_pglist" wx:for-index="pglistIndex" wx:key="index">
                        <kw-list-cell isArrow="{{false}}">
                            <view>
                                <view class="ddjs-head clearfix" >
                                    <text class="fl color-red">评分{{ej_pglist.P_FZ || ""}}</text>
                                    <view class="fr ">
                                        <button size="mini" type="primary" bindtap="zbgcdShow" data-index="{{[yjIndex,ejIndex,pglistIndex]}}" disabled="{{param.STATU==2 || ej_pglist.PGLX==1}}">{{ej_pglist.PGMC}}</button>
                                    </view>
                                </view>
                            </view>
                        </kw-list-cell>
                        <kw-list-cell isArrow="{{false}}" wx:if="{{ej_pglist.PGLX==1}}">
                            <view>
                                <view class="ddjs-head clearfix" >
                                    <text class="fl">评价说明 / 佐证文件</text>
                                </view>
                                <view class="ddjs-body">
                                    <view>【指标评价说明】：{{ej_pglist.PGYJ ||'未填写'}}</view>
                                    <view>【存在问题】：{{ej_pglist.CZWT ||'未填写'}}</view>
                                    <view wx:for="{{ej_pglist.DD_FILE_LIST}}" wx:key="index">
                                        【{{item.REMARK}}】<rich-text nodes="{{item.MLNR}}" class="color-blue"></rich-text>
                                    </view>
                                </view>
                            </view>
                        </kw-list-cell>
                        <kw-list-cell isArrow="{{false}}" wx:else>
                            <view>
                                <view class="ddjs-head clearfix" >
                                    <text class="fl">评价说明 / 佐证文件</text>
                                </view>
                                <view class="ddjs-body">
                                    <view>【审核说明/存在问题】：{{ej_pglist.PGYJ ||'未填写'}}</view>
                                    
                                </view>
                            </view>
                        </kw-list-cell>
                    </view>
                    


                    <!--三级观测 -->
                    <view class="pg-sjbt" wx:if="{{!ejItem.children}}" wx:for="{{ejItem.children}}" wx:for-item="sjItem" wx:for-index="sjIndex" wx:key="sjIndex" >
                        {{sjItem.CONTENT}}
                        <text class="color-red">（{{sjItem.ZBFZ }}分）</text>
                        <view wx:for="{{sjItem.PG_LIST}}" wx:for-item="sj_pglist" wx:for-index="pglistIndex" wx:key="index">
                        <kw-list-cell isArrow="{{false}}">
                            <view>
                                <view class="ddjs-head clearfix" >
                                    <text class="fl color-red">评分{{sj_pglist.P_FZ || ""}}</text>
                                    <view class="fr ">
                                        <button size="mini" type="primary" bindtap="zbgcdShow" data-index="{{[yjIndex,ejIndex,sjIndex,pglistIndex]}}" disabled="{{param.STATU==2 || sj_pglist.PGLX==1}}">{{sj_pglist.PGMC}}</button>
                                    </view>
                                </view>
                            </view>
                        </kw-list-cell>
                        <kw-list-cell isArrow="{{false}}" wx:if="{{sj_pglist.PGLX==1}}">
                            <view>
                                <view class="ddjs-head clearfix" >
                                    <text class="fl">评价说明 / 佐证文件</text>
                                </view>
                                <view class="ddjs-body">
                                    <view>【指标评价说明】：{{sj_pglist.PGYJ ||'未填写'}}</view>
                                    <view>【存在问题】：{{sj_pglist.CZWT ||'未填写'}}</view>
                                    <view wx:for="{{sj_pglist.DD_FILE_LIST}}" wx:key="index">
                                        【{{item.REMARK}}】<rich-text nodes="{{item.MLNR}}" class="color-blue"></rich-text>
                                    </view>
                                </view>
                            </view>
                        </kw-list-cell>
                        <kw-list-cell isArrow="{{false}}" wx:else>
                            <view>
                                <view class="ddjs-head clearfix" >
                                    <text class="fl">评价说明 / 佐证文件</text>
                                </view>
                                <view class="ddjs-body">
                                    <view>【审核说明/存在问题】：{{sj_pglist.PGYJ ||'未填写'}}</view>
                                    
                                </view>
                            </view>
                        </kw-list-cell>
                    </view>
                    </view>
                </view>
            </view>
            

        </view>
    </scroll-view>

    <!-- 上报返回 按钮 -->
    <view class="pg-sbfh">
        <button size="mini" bindtap="back">返回</button>
        <button size="mini" type="primary" bindtap="savePg" wx:if="{{param.STATU!=2}}">上报</button>
    </view>

    <!-- 他评报告 -->
    <view hidden="{{zpbgShow}}" class="zpbg alert-body" catchtouchmove="catchtouchmove">
        <view class="alert-mask" bindtap="zpbgShow"></view>
        <scroll-view scroll-y class="alert-content">
            <view class=" pg-body-title">{{tpbgData.MB_ORG_MC || user.orgMc}}{{tpbgData.PGMC}}报告</view>
            <kw-list-cell isArrow="{{false}}">
                <view>
                    <view class="ddjs-head clearfix">
                        <text class="fl">他评报告</text>
                    </view>
                    <view class="ddjs-body">
                        <kw-editor value="{{tpbgData.PGZJ}}" bindinput="inputZpzj"></kw-editor>
                    </view>
                </view>
            </kw-list-cell>
            <kw-list-cell isArrow="{{false}}">
                <view>
                    <view class="ddjs-head clearfix" >
                        <text class="fl">突出亮点</text>
                    </view>
                    <view class="ddjs-body" >
                        <textarea value="{{tpbgData.TCLD}}" maxlength="4000" bindinput="inputTcld" fixed="true"></textarea>
                    </view>
                </view>
            </kw-list-cell>
            <kw-list-cell isArrow="{{false}}">
                <view>
                    <view class="ddjs-head clearfix" >
                        <text class="fl">存在问题</text>
                    </view>
                    <view class="ddjs-body" >
                        <textarea value="{{tpbgData.CZWT}}" maxlength="4000" bindinput="inputCzwt" fixed="true"></textarea>
                    </view>
                </view>
            </kw-list-cell>
            <kw-list-cell isArrow="{{false}}">
                <view>
                    <view class="ddjs-head clearfix" >
                        <text class="fl">整改建议</text>
                    </view>
                    <view class="ddjs-body" >
                        <textarea value="{{tpbgData.ZGJY}}" maxlength="4000" bindinput="inputXybgzjh" fixed="true"></textarea>
                    </view>
                </view>
            </kw-list-cell>
            <view class="save" bindtap='saveBg'>
                <button >保存并返回</button>
            </view>
        </scroll-view>
    </view>

    <!-- 指标观测点 -->
    <view hidden="{{zbgcdShow}}" class="zpbg alert-body" catchtouchmove="catchtouchmove">
        <view class="alert-mask" bindtap="zbgcdShow"></view>
        <scroll-view scroll-y class="alert-content">
            <view class=" pg-body-title">{{zbgcdData.CONTENT}}<text class="color-red">（{{zbgcdData.ZBFZ}}）分</text></view>
            <kw-list-cell isArrow="{{false}}" wx:if="{{zbgcdData.TYPE == 0 }}">
                <view>
                    <view class="ddjs-head clearfix" >
                        <text class="fl">赋分：</text>
                        <view class="fr" >
                            <i-input-number value="{{zbgcdData.P_FZ}}" min="{{zbgcdData.EXPRESSION.ZXZ}}" max="{{zbgcdData.EXPRESSION.ZDZ}}" step="{{zbgcdData.EXPRESSION.BC}}" bindchange="changeFfjj"></i-input-number>
                        </view>
                    </view>
                </view>
            </kw-list-cell>
            <picker wx:else range="{{zbgcdData.exps}}" range-key="xzqmz" bindchange="changeFfxzq">
                <kw-list-cell title="赋分：" right-note="{{zbgcdData.P_FZ}}"></kw-list-cell>
            </picker>
            <kw-list-cell isArrow="{{false}}">
                <view>
                    <view class="ddjs-head clearfix" >
                        <text class="fl">审核说明/存在问题：</text>
                    </view>
                    <view class="ddjs-body" >
                        <textarea value="{{zbgcdData.PGYJ }}" maxlength="4000" bindinput="inputGcdPjsm" fixed="true"></textarea>
                    </view>
                </view>
            </kw-list-cell>
            <kw-list-cell isArrow="{{false}}">
                <view>
                    <view class="ddjs-head clearfix" >
                        <text class="fl">  评分标准：<text class="color-999">{{zbgcdData.PFXZ || ""}}</text></text>
                    </view>
                </view>
            </kw-list-cell>
            <kw-list-cell isArrow="{{false}}">
                <view>
                    <view class="ddjs-head clearfix" >
                        <text class="fl">  佐证材料: 请于pc端保存</text>
                    </view>
                </view>
            </kw-list-cell>
            <view class="save" bindtap='saveZpgcd'>
                <button >保存并返回</button>
            </view>
        </scroll-view>
    </view>
</view>