.content{
    padding: 0 20rpx 0 20rpx;
}
.pager{
    top: 0;
}
.pgzb,.pgtb,.ptqk{
    width: 30% !important;
}
.pgtb{
    border-radius: 0rpx  !important; 
}

/* 填写部分 */
.pgtb-tx-titles{
    padding-top: 20rpx;
}
.pgtb-tx-title{
    margin-top: 10rpx;
}

/* 按钮 */
.pgtb-an{
    position: sticky;
    bottom: 0;
    left: 0;
    background: white;
    z-index: 10;
    padding:10rpx 0;
    width: 100%;
    text-align: center;
}
.pgtb-an button{
    height: 55rpx;
    margin-left: 20rpx;
}
.pgtb-an button[type="warn"]{
    background: #f1a325;
}
.pgtb-an button[type="primary"]{
    background: #109dea;
}
.rich-text {
  overflow: hidden;
  border: none;
}
.p_class{
    padding-left: 50rpx;
    border: none;
}
.textareablur{
    height: 120rpx;
}
.textareafocus{
    height: 250rpx;
}