/**index.wxss**/
swiper {
  width: 100%;
  height: 405rpx;
}
.newsIma{
  width: 100%;
  height: 405rpx;
}
.newBody{
  flex-basis: 667rpx;
  flex-grow: 2;
  flex-shrink: 2;
  width: 100%;
}
.btList{
  white-space: nowrap;
  height: 95rpx;
  background: white;
}
.bt {
  display: inline-block;
  width: 170rpx;
  height: 93rpx;
  line-height: 93rpx;
  border-bottom: #dedede solid 2rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
}
.active{
  display: inline-block;
  border-bottom:  #109DEA solid 4rpx;
  height: 91rpx;
  color: #109dea;
  line-height: 91rpx;
}
.newsList{
  height: calc(100% - 95rpx);
  padding-top: 16rpx;
  background: #f5f5f5;
}
/* ↓↓↓↓↓↓↓↓↓↓↓↓↓↓ 新闻列表 ↓↓↓↓↓↓↓↓↓↓↓↓↓↓ */
.news{
  height: 105rpx;
  position: relative;
  display: flex;
  flex-direction: row;
}
.news .newsBt{
  width: 540rpx;
  align-self:center;
  color:#333333;
  font-size: 28rpx;
  flex-shrink: 2;
  -webkit-line-clamp:2;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  overflow:hidden;
  text-overflow: ellipsis;
}
.news .newsDate{
  width: 60rpx;
  color: #999999;
  font-size: 26rpx;
  height: 20rpx;
  line-height: 20rpx;
  margin: auto;
}
.changeBoder .kw-list-cell-extraIcon{
  line-height: 105rpx;
}
/* ↑↑↑↑↑↑↑↑↑ 新闻列表 ↑↑↑↑↑↑↑ */

.kw-list-cell-border-bottom::after{
  background: none !important;
}
.changeBoder::after{
  border-bottom: #d5d4d4 dashed 2rpx;
} 